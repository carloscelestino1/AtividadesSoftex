qtd_rodas = int(input("quantidade de rodas: "))
peso_bruto = int(input("peso do veiculo em kg: "))
qtd_pessoas = int(input("quantidade de pessoas: "))

if qtd_rodas <= 3:
  print("categoria A")
elif qtd_rodas = 4 and qtd_pessoas <=8 and peso_bruto <= 3500:
  print("categoria B")
elif qtd_rodas >= 4 and peso_bruto >= 3500 and peso_bruto <=6000:
  print("categoria c")
elif qtd_rodas >= 4 and qtd_pessoas > 8:
  print("categoria D")
elif qtd_rodas >= 4 and peso_bruto > 6000:
  print("categoria E")
else:
  print("entre com informa√ßoes validas.")
